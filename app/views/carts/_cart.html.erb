<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>
  <table class="table-auto">
    <% cart.line_items.each do |line_item| %>
      <tr>
        <td class="text-right"><%= line_item.quantity %></td>
        <td>&times;</td>
        <td class="pr-2">
          <%= line_item.product.title %>
        </td>
        <td class="text-right font-bold">
          <%= number_to_currency(line_item.total_price) %>
        </td>
        <td class="pl-4">
          <%= button_to "Ã—", line_item_path(line_item), method: :delete, 
                        class: 'text-red-600 hover:text-red-800 font-bold text-lg leading-none px-2 py-1 rounded hover:bg-red-50',
                        title: 'Remove item',
                        data: { turbo_confirm: "Remove #{line_item.product.title} from cart?" } %>
        </td>
      </tr>
    <% end %>
    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="4">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
  <%= button_to 'Empty Cart', cart, method: :delete, class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
</div>